<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.destin</groupId>
    <artifactId>maven-test-support-plugin-parent</artifactId>
    <version>0.0.18-SNAPSHOT</version>
    <packaging>pom</packaging>

    <scm>
        <developerConnection>scm:git:https://github.com/destin/maven-test-support-plugin.git</developerConnection>
    </scm>

    <properties>
        <!-- Base directory where IntelliJ installation is extracted -->
        <intellij.install.basedir>/tmp/intellij</intellij.install.basedir>

        <intellij.install.dir>${intellij.install.basedir}/${intellij.version}</intellij.install.dir>
    </properties>

    <modules>
        <module>intellij-installer</module>
        <module>maven-test-support-plugin</module>
    </modules>

    <profiles>
        <profile>
            <id>IJ16EAP</id>
            <properties>
                <intellij.version>ideaIC-144.2151.16</intellij.version>
                <intellij.install.downloadUrl>https://download.jetbrains.com/idea/ideaIC-144.2151.16-custom-jdk-linux.tar.gz</intellij.install.downloadUrl>
            </properties>
        </profile>

        <profile>
            <id>IJ15</id>
            <properties>
                <intellij.version>ideaIC-15.0.2</intellij.version>
                <intellij.install.downloadUrl>https://download.jetbrains.com/idea/ideaIC-15.0.2.tar.gz</intellij.install.downloadUrl>
            </properties>
        </profile>

    </profiles>
</project>