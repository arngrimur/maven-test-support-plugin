<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.destin</groupId>
    <artifactId>maven-test-support-plugin</artifactId>
    <version>0.0.16</version>

    <scm>
        <developerConnection>scm:git:https://github.com/destin/maven-test-support-plugin.git</developerConnection>
    </scm>

    <properties>
        <intellij.path>/home/dawid/tools/ide/idea</intellij.path>
        <intellij.lib.path>${intellij.path}/lib</intellij.lib.path>
        <intellij.plugins.path>${intellij.path}/plugins</intellij.plugins.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.intellij.openapi</groupId>
            <artifactId>openapi</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/openapi.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij.openapi</groupId>
            <artifactId>extensions</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/extensions.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>util</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/util.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>idea</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/idea.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>idea_rt</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/idea_rt.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/annotations.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>0.2</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/jdom.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
            <scope>system</scope>
            <systemPath>${intellij.lib.path}/log4j.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij.plugins</groupId>
            <artifactId>junit</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.plugins.path}/junit/lib/idea-junit.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij.plugins</groupId>
            <artifactId>maven</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.plugins.path}/maven/lib/maven.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij.plugins</groupId>
            <artifactId>maven-server-api</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${intellij.plugins.path}/maven/lib/maven-server-api.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.9.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-plugin-for-sandbox</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${user.home}/.IdeaIC14/system/plugins-sandbox/plugins/maven-test-support-plugin/classes</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>target/classes</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>