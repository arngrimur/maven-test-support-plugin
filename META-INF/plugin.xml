<idea-plugin version="2">
  <id>org.dpytel.intellij.plugin.maventest</id>
  <name>Maven tests support plugin</name>
  <version>0.0.4</version>
  <vendor email="support@yourcompany.com" url="https://github.com/destin/maven-test-support-plugin">Dawid Pytel</vendor>

  <description><![CDATA[
      Maven tests support plugin.<br>
      ]]></description>

  <change-notes><![CDATA[
      <ul>
        <li>0.0.1 - Initial version
        <li>0.0.2 - Show test results action visible only on maven projects
        <li>0.0.3 - Added icon for Show test results action
        <li>0.0.4 - Added icon for Show test results tool window, fixed: 1. New report directories are not
                    recognized without Synchronize
      </ul>
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->

  <depends>JUnit</depends>
  <depends>org.jetbrains.idea.maven</depends>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
      <group id="MavenTest.MenuGroup" text="_Maven Tests" description="Maven Tests">
          <add-to-group group-id="ProjectViewPopupMenu" anchor="last"  />
          <action id="MavenTest.ShowTestResults"
                  class="org.dpytel.intellij.plugin.maventest.ShowTestResultsAction"
                  text="Show Test Results"
                  description="Displays results of all tests in given project"
                  icon="/icons/showResultsAction.png"/>
      </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>